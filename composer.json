{
    "$schema": "https://getcomposer.org/schema.json",
    "name": "laravel/laravel",
    "type": "project",
    "description": "The skeleton application for the Laravel framework.",
    "keywords": [
        "laravel",
        "framework"
    ],
    "license": "MIT",
    "require": {
        "php": "^8.2",
        "laravel/framework": "^11.31",
        "laravel/tinker": "^2.9",
        "opcodesio/log-viewer": "^3.12"
    },
    "require-dev": {
        "barryvdh/laravel-debugbar": "^3.14",
        "captainhook/captainhook-phar": "^5.24",
        "fakerphp/faker": "^1.23",
        "larastan/larastan": "^3.0",
        "laravel/pail": "^1.1",
        "laravel/pint": "^1.19",
        "laravel/sail": "^1.26",
        "mockery/mockery": "^1.6",
        "nunomaduro/collision": "^8.1",
        "peckphp/peck": "^0.1.1",
        "pestphp/pest": "^3.7",
        "pestphp/pest-plugin-laravel": "^3.0",
        "pestphp/pest-plugin-type-coverage": "^3.2",
        "ramsey/conventional-commits": "^1.5",
        "rector/rector": "^2.0",
        "veewee/composer-run-parallel": "^1.4"
    },
    "autoload": {
        "psr-4": {
            "App\\": "app/",
            "Database\\Factories\\": "database/factories/",
            "Database\\Seeders\\": "database/seeders/"
        },
        "files": [
            "app/Helpers/helpers.php"
        ]
    },
    "autoload-dev": {
        "psr-4": {
            "Tests\\": "tests/"
        }
    },
    "scripts": {
        "post-autoload-dump": [
            "Illuminate\\Foundation\\ComposerScripts::postAutoloadDump",
            "@php artisan package:discover --ansi",
            "@php artisan log-viewer:publish"
        ],
        "post-update-cmd": [
            "@php artisan vendor:publish --tag=laravel-assets --ansi --force"
        ],
        "post-root-package-install": [
            "@php -r \"file_exists('.env') || copy('.env.example', '.env');\""
        ],
        "post-create-project-cmd": [
            "@php artisan key:generate --ansi",
            "@php -r \"file_exists('database/database.sqlite') || touch('database/database.sqlite');\"",
            "@php artisan migrate --graceful --ansi"
        ],
        "dev": [
            "Composer\\Config::disableProcessTimeout",
            "npx concurrently -c \"#93c5fd,#c4b5fd,#fb7185,#fdba74\" \"php artisan serve\" \"php artisan queue:listen --tries=1\" \"php artisan pail --timeout=0\" \"npm run dev\" --names=server,queue,logs,vite"
        ],
        "format:rectify": "rector process --ansi",
        "format:code-style": "pint",
        "format": [
            "@format:rectify",
            "@format:code-style"
        ],
        "test:rectify": "rector --dry-run",
        "test:code-style": "pint --test",
        "test:types": "phpstan analyse",
        "test:arch": "pest --filter=arch --parallel --bail",
        "test:type-coverage": "pest --type-coverage --min=100 --parallel --bail",
        "test:unit": "pest --parallel --bail",
        "test:typos": "peck",
        "test": [
            "@test:rectify",
            "@test:code-style",
            "@test:types",
            "@test:arch",
            "@test:type-coverage",
            "@test:unit",
            "@test:typos"
        ],
        "test:parallel": "@parallel test:rectify test:code-style test:types test:arch test:type-coverage test:unit test:typos",
        "format-and-test": [
            "@format",
            "@parallel test:types test:arch test:type-coverage test:unit test:typos"
        ]
    },
    "extra": {
        "laravel": {
            "dont-discover": []
        }
    },
    "config": {
        "optimize-autoloader": true,
        "preferred-install": "dist",
        "sort-packages": true,
        "allow-plugins": {
            "captainhook/captainhook-phar": true,
            "pestphp/pest-plugin": true,
            "php-http/discovery": true,
            "veewee/composer-run-parallel": true
        }
    },
    "minimum-stability": "stable",
    "prefer-stable": true
}
