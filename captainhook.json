{
    "commit-msg": {
        "enabled": true,
        "actions": [
            {
                "action": "\\Ramsey\\CaptainHook\\ValidateConventionalCommit"
            }
        ]
    },
    "pre-commit": {
        "enabled": true,
        "actions": [
            {
                "action": "composer test:parallel"
            },
            {
                "action": "./node_modules/.bin/prettier --write resources/**/*.blade.php"
            }
        ]
    }
}
